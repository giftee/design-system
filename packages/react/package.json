{
  "name": "@giftee/abukuma-react",
  "version": "4.2.2",
  "license": "MIT",
  "type": "module",
  "description": "React Component Library of Giftee Design System",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "format": "pnpm lint:fix && pnpm prettier:fix",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:markuplint": "markuplint './src/**/*.tsx'",
    "prettier": "prettier --check '**/*.{js,jsx,ts,tsx,json}'",
    "prettier:fix": "prettier --write '**/*.{js,jsx,ts,tsx,json}'",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@giftee/abukuma-css": "workspace:^",
    "@markuplint/jsx-parser": "^4.7.22",
    "@markuplint/react-spec": "^4.5.22",
    "@storybook/addon-a11y": "10.1.10",
    "@storybook/addon-docs": "10.1.10",
    "@storybook/react-vite": "10.1.10",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitejs/plugin-react": "^5.1.2",
    "dialog-polyfill": "^0.5.6",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-storybook": "10.1.10",
    "globals": "^16.5.0",
    "happy-dom": "^20.1.0",
    "markuplint": "^4.14.0",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "storybook": "10.1.10",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "@giftee/abukuma-css": "workspace:^",
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/giftee/design-system"
  },
  "files": [
    "dist/*"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "engines": {
    "node": ">=18.0.0 <25"
  }
}
